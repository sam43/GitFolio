<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Night theme for splash screen -->
    <style name="Theme.GitFolio.SplashScreen" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color for dark mode -->
        <item name="windowSplashScreenBackground">@color/splash_background_night</item>
        <!-- Set the splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Set the duration of the animated icon animation -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- Set the theme of the Activity that directly follows your splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.GitFolio</item>
    </style>
</resources>